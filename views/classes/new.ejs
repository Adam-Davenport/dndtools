<% include ../partials/header.ejs %>
<div class="container content">
	<h1>Add A New Class</h1>
	<form action="/classes" method="post">
		<div class="form-group">
			<label for="class[name]" >Name:</label>
			<input type="text" name="class[name]" class="form-control">
		</div>
		<div class="form-group">
			<label for="class[hd]" >Hit Die:</label>
			<select name="class[hd]" id="" class="form-control">
				<% for(i = 4; i < 14; i=i+2){ %>
					<option value="<%= i %>"><%= i %></option>
				<% } %>
			</select>
		</div>
		<div class="form-group">
			<label for="class[bab]">Base Attack Bonus:</label>
			<select name="class[bab]" id="" class="form-control">
				<option value="Full">Full</option>
				<option value="Medium">Medium</option>
				<option value="Half">Half</option>
			</select>
		</div>
		<div class="form-group">
			<h2>Proficiencies</h2>
			<div class="row">
				<div class="col-xs-1">
					<p><strong>Weapons:</strong></p>
				</div>
				<div class="col-xs-1">
					<label for="class[simple]">
						<input type="checkbox" class="form-check-input" name="class[simple]">
						Simple
					</label>
				</div>
				<div class="col-xs-1">
					<label for="class[martial]">
						<input type="checkbox" class="form-check-input" name="class[martial]">
						Martial
					</label>
				</div>
				<div class="col-xs-2">
					<label for="class[otherWeapons]">Other Weapons:</label>
				</div>
				<div class="col-xs-7">
					<input type="text" name="class[otherWeapon]" class="form-control">
				</div>
				</div>
				<div class="col-xs-2"></div>
				<div class="col-xs-2"></div>
			</div>
		<div class="form-group">
			<div class="row">
				<div class="col-xs-1">
					<p><strong>Armor:</strong></p>
				</div>
				<div class="col-xs-1">
					<label for="class[light]">
						<input type="checkbox" name="class[light]">
						Light
					</label>
				</div>
				<div class="col-xs-1">
					<label for="class[medium]">
						<input type="checkbox" name="class[medium]">
						Mediu
					</label>
				</div>
				<div class="col-xs-1">
					<label for="class[heavy]">
						<input type="checkbox" name="class[heavy]">
						Heavy
					</label>
				</div>
			</div>
		</div>
		<div class="form-group">
			<input type="checkbox" name="class[spellcasting]">
			<label for="class[spellcasting]">Spellcasting:</label>
			<select name="class[spellprogression]" id="">
				<option value="Cleric">Full</option>
				<option value="Sorcerer">Sorcerer</option>
				<option value="Duskblade">Duskblade</option>
				<option value="Paladin">Paladin</option>
			</select>
		</div>
		<h2>Saves:</h2>
		<div class="row">
		</div>
		<div class="form-check">
			<label class="form-check-label">
				<input class="form-check-input" type="checkbox" value="" name="class[fort]">
				Fortitude
			</label>
		</div>
		<div class="form-check">
			<label class="form-check-label">
				<input class="form-check-input" type="checkbox" value="" name="class[ref]">
				Reflex
			</label>
		</div>
		<div class="form-check">
			<label class="form-check-label">
				<input class="form-check-input" type="checkbox" value="" name="class[will]">
				Will
			</label>
		</div>
		<h2>Class Features</h2>
		<div id="features">
